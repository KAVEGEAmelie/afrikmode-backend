{
  "name": "afrikmode-backend",
  "version": "1.0.0",
  "description": "Backend API pour la plateforme AfrikMode - E-commerce de mode africaine",
  "main": "src/server.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 src/server.js",
    "start:simple": "node --max-old-space-size=4096 start-simple.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=4096 src/server.js",
    "dev": "nodemon src/server.js",
    "dev:debug": "nodemon --inspect src/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "migrate": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "migrate:reset": "knex migrate:rollback --all && knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:status": "knex migrate:status",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "reset-db": "npm run migrate:reset && npm run seed",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "build": "echo 'No build step needed for Node.js'",
    "clean": "rm -rf logs/* uploads/temp/* coverage/",
    "docker:dev": "docker-compose up -d db redis",
    "docker:test": "docker-compose --profile test up -d",
    "docker:tools": "docker-compose --profile tools up -d",
    "docker:full": "docker-compose --profile full up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "logs:audit": "tail -f logs/audit.log",
    "health": "curl -f http://localhost:5000/api/health || exit 1",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "setup": "npm install && cp .env.example .env && npm run migrate && npm run seed",
    "setup:quick": "npm run docker:dev && sleep 5 && npm run migrate && npm run seed && npm run dev",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o swagger.json src/routes/*.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "graphql": "^16.11.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^9.0.20",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "knex": "^3.1.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ecommerce",
    "fashion",
    "african",
    "marketplace",
    "nodejs",
    "api"
  ],
  "author": "Equipe AfrikMode",
  "license": "ISC"
}
