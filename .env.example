# ===========================================
# AFRIKMODE BACKEND - CONFIGURATION
# ===========================================
# Copiez ce fichier vers .env et configurez vos variables

# ===========================================
# ENVIRONNEMENT
# ===========================================
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# ===========================================
# BASE DE DONNÉES POSTGRESQL
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/afrikmode_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=afrikmode_dev
DB_USER=your_username
DB_PASSWORD=your_password

# Base de données de test
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/afrikmode_test
TEST_DB_NAME=afrikmode_test

# ===========================================
# AUTHENTIFICATION & SÉCURITÉ
# ===========================================
# JWT Secrets (générez des clés fortes !)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_here_different_from_jwt_secret

# Durées des tokens
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt rounds (recommandé : 12)
BCRYPT_ROUNDS=12

# ===========================================
# REDIS (Cache & Sessions)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# EMAIL & SMTP
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Expéditeur par défaut
FROM_EMAIL=noreply@afrikmode.com
FROM_NAME=AfrikMode
SUPPORT_EMAIL=support@afrikmode.com

# ===========================================
# FIREBASE (Notifications Push)
# ===========================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ===========================================
# PAIEMENTS
# ===========================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# CDN/Storage Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret
USE_CLOUDINARY=false

# Payment Gateways
# TMoney/Flooz Configuration
TMONEY_API_URL=https://api.tmoney.tg
TMONEY_MERCHANT_ID=your_merchant_id
TMONEY_API_KEY=your_tmoney_key
TMONEY_SECRET_KEY=your_tmoney_secret

# Orange Money Configuration  
ORANGE_MONEY_API_URL=https://api.orange.com
ORANGE_MONEY_CLIENT_ID=your_client_id
ORANGE_MONEY_CLIENT_SECRET=your_client_secret

# MTN Money Configuration
MTN_MONEY_API_URL=https://api.mtn.com
MTN_MONEY_USER_ID=your_user_id
MTN_MONEY_API_KEY=your_mtn_key

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_key
SHIPMENT_TRACKING_API_KEY=your_tracking_key

# Security & Rate Limiting
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Multi-tenant
ENABLE_MULTI_TENANT=true
DEFAULT_CURRENCY=FCFA
SUPPORTED_CURRENCIES=FCFA,EUR,USD
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en

# Cache
CACHE_TTL=3600
ENABLE_CACHE=true

# Session
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ===========================================
# NOTIFICATIONS PUSH FIREBASE
# ===========================================

# Configuration Firebase (Option B - Fichier JSON)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Activation des notifications
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_DEFAULT_SOUND=default

# Redis Configuration - DÉSACTIVÉ pour éviter les erreurs
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
FIREBASE_PROJECT_ID=afrikmode-4968b