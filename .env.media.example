# Configuration AWS pour CDN et stockage des médias
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-west-3
AWS_S3_BUCKET=afrikmode-media-bucket
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net

# Configuration des images
MAX_IMAGE_WIDTH=4000
MAX_IMAGE_HEIGHT=4000
MIN_IMAGE_WIDTH=50
MIN_IMAGE_HEIGHT=50
WATERMARK_PATH=assets/watermark.png

# Configuration du traitement des médias
IMAGE_OPTIMIZATION_ENABLED=true
AUTO_WEBP_GENERATION=true
CDN_CACHE_DURATION=31536000

# Configuration de l'upload
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=10
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,gif,webp,bmp,tiff
TEMP_FILE_RETENTION_HOURS=24

# Configuration des tâches automatisées
AUTO_OPTIMIZE_SCHEDULE=0 2 * * *
TEMP_CLEANUP_SCHEDULE=0 3 * * *
WEBP_GENERATION_SCHEDULE=0 1 * * 0
LOG_CLEANUP_SCHEDULE=0 4 1 * *
JOB_MONITORING_SCHEDULE=0 * * * *

# Configuration de la compression
JPEG_QUALITY=85
WEBP_QUALITY=80
PNG_COMPRESSION_LEVEL=9
PROGRESSIVE_JPEG=true

# Configuration du filigrane par défaut
DEFAULT_WATERMARK_POSITION=bottom-right
DEFAULT_WATERMARK_MARGIN=20
DEFAULT_WATERMARK_OPACITY=0.7

# Configuration CDN et cache
CDN_ENABLED=true
CACHE_CONTROL_MAX_AGE=31536000
SIGNED_URL_EXPIRATION=3600

# Configuration du monitoring
STUCK_JOB_TIMEOUT_HOURS=2
ACCESS_LOG_RETENTION_MONTHS=6
PERFORMANCE_MONITORING_ENABLED=true

# Configuration de sécurité pour les médias
MEDIA_ACCESS_LOGGING=true
MEDIA_VIRUS_SCAN_ENABLED=false
MEDIA_IP_WHITELIST_ENABLED=false
MEDIA_RATE_LIMIT_PER_HOUR=1000